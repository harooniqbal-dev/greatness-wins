{% assign s = section.settings %}
<section>
    <div class="js-athlete-section-container container mx-auto flex flex-col items-center">
        <div class="max-w-[65.625rem]">
            <h2 class="mt-24 text-4xl text-center font-semibold leading-9">{{ s.title }}</h2>
            <div class="max-w-[42.375rem] mx-auto text-lg text-center mt-4 mb-12">{{ s.description }}</div>
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-2 lg:gap-7 mb-12" aria-live="assertvie" role="alert" aria-atomic="true">
                {% for block in section.blocks %}
                    {% assign products = block.settings | where: "type", "product" %}
                    <div class="{% if forloop.index > 3 %}hidden js-athletes-hidden-pastile {% endif %}">
                        {%
                            render 'c-image',
                            src: block.settings.image_block.src,
                            lazy: true,
                            alt: block.settings.image_block.alt,
                            customClass: 'w-full h-[19rem] sm:h-[25.125rem] object-cover object-top',
                            width: block.settings.image_block.width,
                            height: block.settings.image_block.height
                        %}
                        <h3 class="my-4">{{ block.settings.title }}</h3>
                        <div class="mb-5 text-sm">{{ block.settings.subtitle }}</div>
                        <h4 class="mb-4 text-sm">{{ block.settings.products_heading }}</h4>
                        <ul class="grid grid-cols-4 gap-2">
                            {% if block.settings.first_product_pick %}
                                {% assign product_item = all_products[block.settings.first_product_pick] %}
                                <li class="mb-8 md:mb-0">
                                    <a
                                        class="focus-visible:text-white focus-visible:border-orange"
                                        href={{ product_item.url }}
                                    >
                                        <span class="sr-only">{{ product_item.title }}</span>
                                        {% if product_item.featured_image %}
                                        {%
                                            render 'c-image',
                                            src: product_item.featured_image,
                                            lazy: true,
                                            alt: product_item.featured_image.alt,
                                            customClass: 'max-w-24 lg:max-w-16 h-24 lg:h-16 object-contain',
                                            width: product_item.featured_image.width,
                                            height: product_item.featured_image.height
                                        %}
                                        {% endif %}
                                    </a>
                                </li>
                            {% endif %}
                            {% if block.settings.second_product_pick %}
                                {% assign product_item = all_products[block.settings.second_product_pick] %}
                                <li class="mb-8 md:mb-0">
                                    <a
                                        class="focus-visible:text-white focus-visible:border-orange"
                                        href={{ product_item.url }}
                                    >
                                        {% if product_item.featured_image %}
                                        {%
                                            render 'c-image',
                                            src: product_item.featured_image,
                                            lazy: true,
                                            alt: product_item.featured_image.alt,
                                            customClass: 'max-w-24 lg:max-w-16 h-24 lg:h-16 object-contain',
                                            width: product_item.featured_image.width,
                                            height: product_item.featured_image.height
                                        %}
                                        {% endif %}
                                    </a>
                                </li>
                            {% endif %}
                            {% if block.settings.third_product_pick %}
                                {% assign product_item = all_products[block.settings.third_product_pick] %}
                                <li class="mb-8 md:mb-0">
                                    <a
                                        class="focus-visible:text-white focus-visible:border-orange"
                                        href={{ product_item.url }}
                                    >
                                        {% if product_item.featured_image %}
                                        {%
                                            render 'c-image',
                                            src: product_item.featured_image,
                                            lazy: true,
                                            alt: product_item.featured_image.alt,
                                            customClass: 'max-w-24 lg:max-w-16 h-24 lg:h-16 object-contain',
                                            width: product_item.featured_image.width,
                                            height: product_item.featured_image.height
                                        %}
                                        {% endif %}
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                    {% endfor %}
            </div>
                <div class="text-center mt-12 mb-24">
                    <button
                        aria-label="{{ s.button_aria_label }}"
                        type="button"
                        class="js-show-more-button border border-solid border-black px-4 py-2 rounded-full text-[0.625rem] leading-6 tracking-widest hover:border-orange hover:text-white hover:bg-orange focus-visible:text-white focus-visible:bg-orange focus-visible:border-orange transition-colors uppercase"
                    >{{ s.button_label }}</button>
                </div>
        </div>
    </div>
</section>
{% schema "athletes" %}