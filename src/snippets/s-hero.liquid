<div class="relative h-[20rem] lg:h-[32.5rem] collection-header">
  <img
    class="absolute left-0 top-0 w-full h-full object-cover{% if lazyload %} lazyload{% endif %}"
    {% if lazyload %}
    src="data:,"
    data-src="{{ background_image | img_url: '1920x' }}"
    {% else %}
    src="{{ background_image | img_url: '1920x' }}"
    {% endif %}
    width="{{ background_image.width }}"
    height="{{ background_image.height }}"
    alt="{{ background_image.alt }}">

  <div class="container mx-auto xl:max-w-[83.25rem] text-white">
    <h1 class="sr-only">{{ collection.title }}</h1>
    <h2>{{ collection.title }}</h2>
    <p class="mt-4">{{ collection.description }}</p>
  </div>
</div>