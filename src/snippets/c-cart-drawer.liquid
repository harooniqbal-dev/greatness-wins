<div data-free-shipping-from="{{ settings.free_shipping_from }}" class="transition-transform translate-x-full fixed max-w-full w-full sm:w-96 lg:w-[22.125rem] text-black top-0 right-0 z-30 js-cart-drawer-root h-screen md:h-auto">
    <div class="flex flex-col min-h-[34rem] h-full md:h-auto">
        <h2 class="bg-alabaster text-center text-xxs leading-5 font-semibold p-1 relative">
            {{ "cart.head" | t }}
            <button type="button" class="text-base transition-colors absolute right-2 top-1/2 -translate-y-1/2 link-indicator js-close-cart" aria-label="{{ 'navigation.close_cart' | t }}">&#10006;</button>
        </h2>
        <div class="pt-12 px-5 pb-10 bg-mercury flex justify-items-stretch flex-1">
            <div class="flex flex-col w-full js-cart-drawer">
                <div class="js-cart-drawer-inner"></div>
                <div class="js-cart-drawer--has-items{% if cart.item_count == 0 %} hidden{% endif %} mt-auto">
                    <ul class="border-t border-black mb-5 mt-auto px-5 pt-1 js-cart-drawer-summary">
                        <li class="flex justify-between leading-7">
                            <span class="uppercase">{{ "cart.subtotal" | t }}</span>
                            <span class="js-cart-subtotal-cost">{{ cart.items_subitems_subtotal_price | money }}</span>
                        </li>
                        <li class="flex justify-between leading-7">
                            <span class="text-xs font-normal">{{ "cart.cost_info" | t }}</span>
                        </li>
                    </ul>
                    {% render 'c-button',
                        text: 'cart.checkout_link',
                        translate: true,
                        type: 'link',
                        href: '/checkout',
                        preset: 'outline-black',
                        customClass: 'text-center',
                        fullWidth: true
                    %}
                </div>
                <div class="js-cart-drawer--no-items{% if cart.item_count != 0 %} hidden{% endif %}">
                    <h2 class="font-medium leading-5 text-center text-sm mt-16 mx-auto max-w-[10.5rem]">{{ "cart.empty_cart.heading" | t }}</h2>
                    {% render 'c-button',
                        text: settings.cart_empty_1_link_label,
                        translate: false,
                        type: 'link',
                        href: settings.cart_empty_1_link,
                        preset: 'black',
                        customClass: 'text-center mt-10',
                        fullWidth: true
                    %}
                    {% render 'c-button',
                        text: settings.cart_empty_2_link_label,
                        translate: false,
                        type: 'link',
                        href: settings.cart_empty_2_link,
                        preset: 'outline-black',
                        customClass: 'text-center mt-4',
                        fullWidth: true
                    %}
                    <p class="text-center leading-7 text-sm mt-11 font-normal">{{ "cart.empty_cart.bottom_copy" | t }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="js-product-placeholder-image hidden">{{ 'image' | placeholder_svg_tag }}</div>
</div>
